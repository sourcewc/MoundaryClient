<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="80dp"
    android:layout_marginBottom="1dp"
    android:id="@+id/push_recycler_item">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/push_image"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:paddingRight="20dp"/>
    <TextView
        android:id="@+id/push_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:textColor="#841e1e"
        android:layout_toRightOf="@id/push_image"
        android:padding="5dp" />



    <TextView
        android:id="@+id/push_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ba5050"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/push_nickname" />



</RelativeLayout>
