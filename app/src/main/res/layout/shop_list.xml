<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_marginBottom="1dp"
    android:layout_height="100dp"
    android:id="@+id/event_list_recycler">
    <LinearLayout
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/one"
        android:layout_weight="1.1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
        android:id="@+id/gps_image"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/image"
        android:src="@drawable/logo_moundary_gps"/>
        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:textColor="#841e1e"
            android:gravity="center|left"
            android:layout_toRightOf="@id/gps_image"
            android:padding="2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/two"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/location"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:textColor="#c16a6a"
        android:padding="5dp" /></LinearLayout>


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.2"
    android:layout_toRightOf="@id/image"
    android:layout_below="@+id/content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:textSize="8dp"
        android:gravity="start|center"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:id="@+id/nickname"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center|end"
        android:textSize="8dp"
        android:padding="5dp"
        android:id="@+id/date"
        android:layout_marginRight="10dp"/>


    <ImageView
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:background="@drawable/logo_moundary_reply"
        android:id="@+id/reple_image"
        android:paddingBottom="1dp"
        android:paddingTop="2dp"></ImageView>
    <TextView
        android:id="@+id/reple_count"
        android:layout_width="40dp"
        android:gravity="center|left"
        android:layout_height="match_parent"
        android:textSize="13sp" />


</LinearLayout>
    </LinearLayout>
</LinearLayout>