<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="#ffffff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_friend"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/friend_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#841e1e"
        android:layout_marginTop="27dp"
        android:padding="3dp"
        android:layout_toEndOf="@+id/image_friend" />

    <TextView
        android:id="@+id/friend_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_friend"
        android:layout_below="@+id/friend_name_text"
        android:textSize="12sp"
        android:textColor="#ba5050"
        android:padding="3dp" />

